<%- include ("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= teacher.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/teachers/<%= teacher._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="teacher[name]" value="<%= teacher.name %>">
                </div>

                <div class="form-group">
                    <input class="form-control" type="email" name="teacher[email]"
                    value="<%= teacher.email %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="teacher[experience]" value="<%= teacher.experience %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="teacher[number]" value="<%= teacher.number %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="teacher[address]" value="<%= teacher.address %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="teacher[subject]" 
                    value="<%= teacher.subject %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="teacher[description]" 
                    value="<%= teacher.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/teachers">Go Back</a>
        </div>
    </div>
</div>
<%- include ("../partials/footer") %>